server {
    listen 80;
    listen [::]:80;
    server_name {{ domain }} default_server;

    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    server_name {{ domain }};

    ssl_certificate /var/www/certs/ssl/domain/cert.crt;
    ssl_certificate_key /var/www/certs/ssl/domain/priv.key;

        client_max_body_size 1g;

    location / {
        proxy_pass http://127.0.0.1:2015;
        proxy_set_header X-Forwarded-For $remote_addr;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Host $host;

        # Nginx by default only allows file uploads up to 1M in size
        # Increase client_max_body_size to match max_upload_size defined in homeserver.yaml
        client_max_body_size 50M;

	 # Synapse responses may be chunked, which is an HTTP/1.1 feature.
	proxy_http_version 1.1;
  }

    location /.well-known/matrix/server {
        access_log off;
        add_header Access-Control-Allow-Origin *;
        default_type application/json;
        return 200 '{"m.server": "matrix.{{ domain }}:443"}';
    }

    location /.well-known/matrix/client {
        access_log off;
        add_header Access-Control-Allow-Origin *;
        default_type application/json;
        return 200 '{"m.homeserver": {"base_url": "https://matrix.{{ domain }}"}}';
    }        
}
